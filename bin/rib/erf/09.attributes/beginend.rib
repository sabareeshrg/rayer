Display "beginend.tiff" "file" "rgb"
Projection "perspective"
WorldBegin
Translate 0 0 2

Color [ 1 0 0 ]

AttributeBegin
	Translate -1 0 0
	Color [ 1 1 0 ]
	Sphere 1 -1 1 360
AttributeEnd
#This resets the colour back to red

AttributeBegin
	Translate 1 0 0
	Sphere 1 -1 1 360
AttributeEnd

WorldEnd
