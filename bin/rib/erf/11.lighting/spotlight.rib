#spotlight.rib
Display "spotlight.tiff" "file" "rgb"
Projection "perspective" "fov" [ 30 ]

Translate 0 0 5

WorldBegin
	LightSource "spotlight" 2 "from" [-2 2 -2] "to" [ 0 0 0 ] "intensity" [ 7 ] "coneangle" [0.25] "conedeltaangle" [0.05]

	Color [ 1 0 0 ]
	Surface "plastic"
	Sphere 1 -1 1 360
WorldEnd
