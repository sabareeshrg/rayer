Display "solid.tiff" "tiff" "rgb"

Projection "perspective" "fov" [30]
LightSource "ambientlight" 1 "intensity" [0.2]
LightSource "spotlight" 2 "from" [-1 1 0 ] "to" [0 0 6] "intensity" [10]
Translate 0 0 6
WorldBegin
Color [1 0 0]

Rotate 10 0 0 1
Surface "solid"
Rotate -10 0 0 1

Translate -0.9 0 0
Sphere 1 -1 1 360

Translate 1.8 0 0
Rotate 90 1 0 0
Sphere 1 -1 1 360
WorldEnd
